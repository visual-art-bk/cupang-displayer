{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react-jsx",
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["pages/**/*.ts", "pages/**/*.tsx", "components/**/*.tsx"],
  "exclude": ["node_modules", "__EG/**/*.ts", "__EG/**/*.tsx"]
}
